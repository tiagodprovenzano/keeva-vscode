{
	"name": "react-keeva-vs",
	"icon": "assets/keeva_icon.png",
	"displayName": "Keeva",
	"description": "Keeva task automation",
	"publisher": "tiagodprovenzano",
	"version": "0.0.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/tiagodprovenzano/keeva-vscode.git"
	},
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other",
		"Language Packs"
	],
	"activationEvents": [
		"onCommand:react-keeva-vs.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"jsonValidation": [
			{
				"fileMatch": "keeva.config.json",
				"url": "./syntaxes/config.schema.json"
			}
		],
		"snippets": [
			{
				"language": "keeva",
				"path": "./snippets/keeva.snippets.json"
			}
		],
		"grammars": [
			{
				"language": "keeva",
				"scopeName": "source.keeva",
				"path": "./syntaxes/keeva.tmGrammar.json"
			}
		],
		"languages": [
			{
				"id": "keeva",
				"aliases": [
					"Keeva",
					"KTL"
				],
				"extensions": [
					".kva"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "react-keeva-vs.helloWorld",
					"group": "Keeva",
					"when": "explorerResourceIsFolder == true"
				}
			]
		},
		"commands": [
			{
				"command": "react-keeva-vs.helloWorld",
				"title": "New component...",
				"enablement": "explorerResourceIsFolder == true"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"@vscode/test-electron": "^1.6.2"
	},
	"dependencies": {
		"@tiagodprovenzano/react-keeva": "^1.0.25"
	}
}
